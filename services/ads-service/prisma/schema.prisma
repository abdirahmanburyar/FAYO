generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
  binaryTargets   = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["ads"]
}

enum AdStatus {
  INACTIVE
  PUBLISHED

  @@schema("ads")
}

model Ad {
  id          String   @id @default(cuid())
  company     String   // Company or person name
  image       String   // File path to uploaded image
  startDate   DateTime
  endDate     DateTime // Calculated from startDate + range
  range       Int      @default(1) // Number of days (endDate = startDate + range)
  status      AdStatus @default(INACTIVE)
  clickCount  Int      @default(0)
  viewCount   Int      @default(0)
  createdBy   String?  // User ID who created the ad
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("ads")
  @@schema("ads")
  @@index([status, startDate, endDate])
}

