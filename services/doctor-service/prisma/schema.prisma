// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Doctor {
  id            String   @id @default(cuid())
  userId        String   @unique // Reference to user in user-service
  licenseNumber String   @unique
  experience    Int      // years of experience
  isVerified    Boolean  @default(false)
  isAvailable   Boolean  @default(true)
  selfEmployedConsultationFee Int?   // Self-employed consultation fee in cents
  bio           String?
  
  // Professional Information
  education     String?  // Educational background (e.g., "MD, Harvard Medical School, 2010")
  certifications String? // JSON array of certifications
  languages     String?  // JSON array of languages spoken
  awards        String?  // JSON array of awards and honors
  publications  String?  // JSON array of publications
  memberships   String?  // JSON array of professional memberships
  researchInterests String? // Research interests and focus areas
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Many-to-many relationship with hospitals
  hospitalDoctors HospitalDoctor[]
  
  // Many-to-many relationship with specialties
  doctorSpecialties DoctorSpecialty[]

  @@map("doctors")
}

model HospitalDoctor {
  id        String   @id @default(cuid())
  doctorId  String
  hospitalId String
  // Note: Role is derived from doctor's specialty, not stored here
  isActive  Boolean  @default(true)
  joinedAt  DateTime @default(now())
  leftAt    DateTime?
  
  // Working schedule and fees
  workingDays String?  // JSON array of days: ["MONDAY", "TUESDAY", "WEDNESDAY", "THURSDAY", "FRIDAY", "SATURDAY", "SUNDAY"]
  startTime   String?  // Time format: "09:00" (24-hour format)
  endTime     String?  // Time format: "17:00" (24-hour format)
  consultationFee Int?  // Consultation fee in cents (specific to this hospital)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  doctor   Doctor @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  hospital Hospital @relation(fields: [hospitalId], references: [id], onDelete: Cascade)

  @@unique([doctorId, hospitalId])
  @@map("hospital_doctors")
}

model Hospital {
  id          String        @id @default(cuid())
  name        String
  type        String        @default("HOSPITAL")
  address     String
  city        String
  phone       String?
  email       String?
  website     String?
  isActive    Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // Many-to-many relationship with doctors
  hospitalDoctors HospitalDoctor[]

  @@map("hospitals")
}

model DoctorSpecialty {
  id          String   @id @default(cuid())
  doctorId    String
  specialtyId String   // Reference to specialty-service specialty ID
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relationships
  doctor Doctor @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  // Note: specialty details are fetched from specialty-service

  @@unique([doctorId, specialtyId])
  @@map("doctor_specialties")
}
