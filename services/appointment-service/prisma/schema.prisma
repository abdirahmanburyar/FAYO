// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Appointment {
  id          String            @id @default(cuid())
  patientId   String
  doctorId    String?
  specialty   String?
  status      AppointmentStatus @default(PENDING)
  scheduledAt DateTime
  duration    Int               @default(30) // minutes
  notes       String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  // Triage related fields
  triageId     String?
  symptoms     String?
  urgency     UrgencyLevel?
  predictedSpecialty String?

  @@map("appointments")
}

model TriageRequest {
  id          String            @id @default(cuid())
  patientId   String
  symptoms    String
  urgency     UrgencyLevel?
  predictedSpecialty String?
  status      TriageStatus      @default(PENDING)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  @@map("triage_requests")
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
  NO_SHOW
}

enum TriageStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum UrgencyLevel {
  LOW
  MEDIUM
  HIGH
  URGENT
}
