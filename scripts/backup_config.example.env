# Database Backup Configuration
# Copy this file to .env and update with your actual values

# Backup directory (default: ./backups)
BACKUP_DIR=./backups

# Docker container name (default: postgres)
DOCKER_CONTAINER=postgres

# Database connection settings (for authentication inside Docker container)
DB_USER=postgres
DB_PASSWORD=postgres

# Databases to backup (comma-separated list)
# For production, you might want to backup all service databases:
DB_NAMES=fayo,user_service,hospital_service,doctor_service,specialty_service,appointment_service,payment_service

# For development with single database:
# DB_NAMES=fayo

